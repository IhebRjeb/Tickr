# Test Environment Variables
# Used for integration and E2E tests

NODE_ENV=test

# Database Configuration (use DATABASE_URL for CI/CD)
# Local: individual vars, CI: DATABASE_URL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=tickr_test

# Or use DATABASE_URL (preferred for CI/CD)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tickr_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Or use REDIS_URL
# REDIS_URL=redis://localhost:6379

# JWT Configuration (test keys)
JWT_SECRET=test-jwt-secret-key-do-not-use-in-production
JWT_EXPIRES_IN=1h

# AWS Configuration (use LocalStack for tests)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT=http://localhost:4566
S3_BUCKET=test-bucket
SES_SENDER_EMAIL=test@example.com

# Stripe Configuration (use test keys)
STRIPE_SECRET_KEY=sk_test_mock_key
STRIPE_WEBHOOK_SECRET=whsec_test_mock_webhook_secret

# Other test configurations
LOG_LEVEL=error
RATE_LIMIT_MAX=1000
BCRYPT_ROUNDS=4
